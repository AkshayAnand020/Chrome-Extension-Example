{
  "manifest_version": 2,
  "name": "Asana Extension for Chrome",
  "version": "1.0.0",
  "description": "Allows quick adding of tasks to Asana from any web page in your browser.",
  "icons": {
    "128": "icon128.png"
  },
  "minimum_chrome_version": "24",

  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "Asana",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "*://*.asana.com/*",
    "*://localhost.org/*"
  ],
  "content_security_policy": "script-src 'self' https://use.typekit.net; object-src 'self'",

  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "exclude_matches": [
      "*://app.asana.com/*"
    ],
    "js": [
      "asana.js",
      "quick_add_client.js"
    ],
    "run_at": "document_start",
    "all_frames": true
  }]
}
